      document.getElementById('upd_id_categoria').value = document.getElementById('reporte_pregunta_categoria').value;
      document.getElementById('upd_rta_correcta').value = document.getElementById('reporte_rta_correcta').value.trim();
      document.getElementById('upd_rta_1').value = document.getElementById('reporte_rta_1').value.trim();
      document.getElementById('upd_rta_2').value = document.getElementById('reporte_rta_2').value.trim();
      document.getElementById('upd_rta_3').value = document.getElementById('reporte_rta_3').value.trim();
      const overlay = document.getElementById('confirmGuardarOverlay');
      if (overlay) { overlay.classList.remove('hidden'); overlay.classList.add('flex'); }
    }
    function cancelarConfirmacionGuardar() {
      const overlay = document.getElementById('confirmGuardarOverlay');
      if (overlay) { overlay.classList.remove('flex'); overlay.classList.add('hidden'); }
    }
    function enviarActualizacionReporte() {
      const form = document.getElementById('formActualizarReporte');
      if (!form) return;
      form.submit();
    }
    function cerrarModalVerReporte() {
      const modal = document.getElementById('modalVerReporte');
      modal.classList.remove('flex');
      modal.classList.add('hidden');
      // Asegurar que se deshabilita edición al cerrar
      deshabilitarEdicionReporte();
    }
    function cancelarEdicionReporte() {
      if (reporteEditMode) {
        // Si está en modo edición, recargar datos originales del reporte
        const idReporte = document.getElementById('reporte_id_field').value;
        if (idReporte) {
          // Recargar sin cerrar modal
          const titleSpan = document.getElementById('modalReporteId');
          const currentId = titleSpan ? titleSpan.innerText : idReporte;
          abrirModalVerReporte(currentId);
        } else {
          deshabilitarEdicionReporte();
        }
      } else {
        cerrarModalVerReporte();
      }
    }
  </script>
