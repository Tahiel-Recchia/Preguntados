<div class="w-full max-w-6xl mx-auto px-4 p-5">

    <h2 class="text-2xl font-bold mb-6 text-white">Jugadores por país</h2>

    <div class="bg-black/10 backdrop-blur-md p-5 rounded-2xl shadow-xl border border-white/10">
        <!-- TABLA -->
        <div class="overflow-hidden rounded-xl border border-white/20" id="tablaContainer">
            <table class="table-auto w-full text-white">
                <thead>
                <tr class="bg-white/20">
                    <th class="px-4 py-3 text-left font-semibold">País</th>
                    <th class="px-4 py-3 text-left font-semibold">Cantidad de jugadores</th>
                </tr>
                </thead>
                <tbody class="backdrop-blur">
                {{#jugadoresPorPais}}
                    <tr class="border-b border-white/10 hover:bg-white/10 transition">
                        <td class="px-4 py-3">{{pais}}</td>
                        <td class="px-4 py-3">{{cantidad}}</td>
                    </tr>
                {{/jugadoresPorPais}}
                </tbody>
            </table>
        </div>

        <!-- GRÁFICO -->
        <h2 class="text-xl font-bold mt-10 mb-4 text-white">Gráfico: Jugadores por país</h2>

        <div class="bg-white/10 backdrop-blur p-5 rounded-xl border border-white/10">
            <canvas id="jugadoresChart" style="width:100%; height:350px;"></canvas>
        </div>

        <!-- GRÁFICO TORTA -->
        <h2 class="text-xl font-bold mt-10 mb-4 text-white">Porcentaje por dificultad de preguntas</h2>
        <div class="bg-white/10 backdrop-blur p-3 rounded-xl border border-white/10 flex justify-center">
            <canvas id="dificultadChart" style="width:100%; height:260px;"></canvas>
        </div>


        <div class="text-center mt-6">
            <button onclick="descargarPDF()"
                class="inline-block py-3 px-6 rounded-lg bg-gradient-to-r from-[#E65895] to-[#BC6BE8] 
                    font-semibold text-white hover:opacity-90 transition">
                Descargar PDF de gráficos
            </button>
        </div>
    </div>

   <script>
        let chartJugadores;
        let chartDificultad;
   </script>

    <script>
        const jugadores = JSON.parse('{{{ jugPorPaisJson }}}');
        const labels = jugadores.map(j => j.pais);
        const cantidades = jugadores.map(j => parseInt(j.cantidad));

        const ctx = document.getElementById('jugadoresChart').getContext('2d');

        chartJugadores = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Cantidad de jugadores',
                    data: cantidades,
                    backgroundColor: 'rgba(59, 130, 246, 0.6)',
                    borderColor: 'rgba(59, 130, 246, 1)',
                    borderWidth: 2,
                    borderRadius: 5
                }]
            },
            options: {
                animation: false,
                responsive: false,
                plugins: {
                    tooltip: { enabled: false },
                    legend: { labels: { color: "white" } }
                },
                hover: { mode: null },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: "rgba(255,255,255,0.1)" },
                        ticks: { color: "white" }
                    },
                    x: {
                        grid: { display: false },
                        ticks: { color: "white" }
                    }
                }
            }
        });
    </script>
    <script>
        // Datos del JSON (vienen del controlador)
        const porcentajes = JSON.parse('{{{ porcentajesJson }}}');

        const difLabels = porcentajes.map(p => p.dificultad);
        const difValores = porcentajes.map(p => parseFloat(p.porcentaje));

        const ctx2 = document.getElementById('dificultadChart').getContext('2d');

        chartDificultad = new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: difLabels,
                datasets: [{
                    data: difValores,
                    backgroundColor: [
                        'rgba(59, 130, 246, 0.7)',   // azul
                        'rgba(239, 68, 68, 0.7)',   // rojo
                        'rgba(234, 179, 8, 0.7)'    // amarillo
                    ],
                    borderColor: 'rgba(255,255,255,0.3)',
                    borderWidth: 2
                }]
            },
          options: {
                animation: false,
                responsive: false,
                plugins: {
                    tooltip: { enabled: false },
                    legend: {
                        labels: { color: "white" }
                    }
                },
                hover: { mode: null },
                maintainAspectRatio: false,
                radius: '80%'
            }
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script>
        async function descargarPDF() {
            const tabla = document.getElementById("tablaContainer");
            const tablaCanvas = await html2canvas(tabla, { backgroundColor: "#000000ff" });
            // Cambiar a negro solo para exportar
            chartJugadores.options.plugins.legend.labels.color = "black";
            chartJugadores.options.scales.x.ticks.color = "black";
            chartJugadores.options.scales.y.ticks.color = "black";
            chartJugadores.update();

            chartDificultad.options.plugins.legend.labels.color = "black";
            chartDificultad.update();

            await new Promise(resolve => setTimeout(resolve, 200));

            const grafico1 = jugadoresChart.toDataURL("image/png");
            const grafico2 = dificultadChart.toDataURL("image/png");
            const grafico3 = tablaCanvas.toDataURL("image/png");

            // Restaurar a blanco
            chartJugadores.options.plugins.legend.labels.color = "white";
            chartJugadores.options.scales.x.ticks.color = "white";
            chartJugadores.options.scales.y.ticks.color = "white";
            chartJugadores.update();

            chartDificultad.options.plugins.legend.labels.color = "white";
            chartDificultad.update();

            const response = await fetch("index.php?controller=paneladmin&method=generarPdfGraficos", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ grafico1, grafico2, grafico3 })
            });

            const blob = await response.blob();
            const url = window.URL.createObjectURL(blob);

            const a = document.createElement("a");
            a.href = url;
            a.download = "reporte_graficos.pdf";
            a.click();

            window.URL.revokeObjectURL(url);
        }
    </script>
</div>