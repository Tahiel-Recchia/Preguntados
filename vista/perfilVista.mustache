<main class="w-full p-8 flex flex-col gap-8 text-[#E2E4F3]">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

        {{#usuario}} <aside class="md:col-span-1 flex flex-col items-center">

            <img src="{{fotoDePerfil}}"
                 onerror="this.src='/public/placeholder.png'"
                 alt="Foto de perfil"
                 class="w-32 h-32 rounded-full object-cover border-4 border-[#E65895] shadow-lg" />

            <h1 class="text-3xl font-bold text-center mt-4">{{nombreDeUsuario}}</h1>

            {{#isEditor}}
                <div class="mt-2 flex justify-center">
                    <span class="px-3 py-1 rounded-full bg-[#BC6BE8] text-sm font-semibold">Editor</span>
                </div>
            {{/isEditor}}

            <div class="w-full bg-[#2c2f56] rounded-lg p-4 mt-8 space-y-4">
                <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-400 font-medium">Año de Nacimiento</span>
                    <span class="font-semibold text-white">{{fechaNac}}</span>
                </div>

                <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-400 font-medium">Sexo</span>
                    <span class="font-semibold text-white">{{sexo}}</span>
                </div>

                <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-400 font-medium">Miembro desde</span>
                    <span class="font-semibold text-white">Oct 2025</span>
                </div>
            </div>
        {{#puedeHacerEditor}}
            <a href="/panelAdmin/hacerEditor/{{id}}"
               class="w-full mt-6 py-3 px-4 rounded-xl bg-gradient-to-r from-[#4facfe] to-[#00f2fe] text-white font-bold shadow-lg shadow-blue-500/30 hover:shadow-blue-500/50 hover:-translate-y-0.5 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-[#343964] flex items-center justify-center gap-2">

                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                Ascender a Editor
            </a>
        {{/puedeHacerEditor}}
            {{#puedeEliminarEditor}}
                <a href="/panelAdmin/eliminarEditor/{{id}}"
                   class="w-full mt-6 py-3 px-4 rounded-xl bg-gradient-to-r from-[#EF4444] to-[#F43F5E] text-white font-bold shadow-lg shadow-red-500/30 hover:shadow-red-500/50 hover:-translate-y-0.5 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-[#343964] flex items-center justify-center gap-2">

                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    Revocar Permiso
                </a>
            {{/puedeEliminarEditor}}
            <a href="/perfil/getQr/{{id}}" class="w-full mt-6 py-3 rounded-lg bg-gradient-to-r from-[#E65895] to-[#BC6BE8] text-white font-semibold hover:opacity-90 active:opacity-80 transition focus:outline-none focus:ring-2 focus:ring-[#BC6BE8] focus:ring-offset-2 focus:ring-offset-[#343964] flex items-center justify-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7.217 10.907a2.25 2.25 0 1 0 0 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186 9.566-5.314m-9.566 7.5 9.566 5.314m0 0a2.25 2.25 0 1 0 3.935 2.186 2.25 2.25 0 0 0-3.935-2.186Zm0-12.814a2.25 2.25 0 1 0 3.933-2.185 2.25 2.25 0 0 0-3.933 2.185Z" />
            </svg>
            Compartir Perfil
            </a>
        </aside>


            <section class="md:col-span-2">
                <h2 class="text-2xl font-bold mb-6 border-b-2 border-[#2c2f56] pb-2">Ubicación</h2>

                {{#esMiPerfil}}
                    <form id="formUbicacion" method="POST" action="/perfil/actualizarUbicacion" class="space-y-3">

                        <label class="text-sm text-gray-400 mb-1 block">Editar dirección:</label>
                        <input type="text" id="addressInput" name="direccion"
                               value="{{direccion}}"
                               class="w-full p-3 rounded-lg bg-[#2c2f56] border border-gray-500 text-[#E2E4F3]
                    focus:border-[#E65895] focus:ring-2 focus:ring-[#E65895] focus:outline-none transition"
                               placeholder="Ej: Argentina, Buenos Aires" required>

                        <div id="map" data-direccion="{{direccion}}" class="w-full h-[250px] rounded-lg border border-gray-600 cursor-crosshair"></div>

                        <p class="text-xs opacity-70 mt-1 text-[#E65895]">
                            <i class="fas fa-info-circle"></i> Haz clic en el mapa para corregir tu ubicación.
                        </p>

                        <button type="submit"
                                class="py-3 rounded-lg bg-gradient-to-r from-[#E65895] to-[#BC6BE8]
                    text-white font-semibold hover:opacity-90 active:opacity-80 transition w-full shadow-md mt-4">
                            Guardar Nueva Ubicación
                        </button>
                    </form>
                {{/esMiPerfil}}


                {{^esMiPerfil}}
                    <div class="space-y-4">
                        <div class="w-full p-4 rounded-lg bg-[#2c2f56] border border-[#2c2f56]">
                            <p class="text-gray-400 text-xs mb-1">Reside en:</p>
                            <p class="text-lg font-semibold text-white flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-[#E65895]">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                                </svg>
                                {{direccion}}
                            </p>
                        </div>

                        <div id="map" data-direccion="{{direccion}}" class="w-full h-[250px] rounded-lg border border-gray-600 opacity-90 pointer-events-none"></div>
                    </div>
                {{/esMiPerfil}}

            </section>

        {{/usuario}} </div>
</main>
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script src="/public/javascript/profileMap.js"></script>
<script>
document.addEventListener("DOMContentLoaded", async () => {
  const mapElement = document.getElementById("map");
  const addressInput = document.getElementById("addressInput");
  const direccion = mapElement.dataset.direccion;

  const map = L.map("map").setView([-34.6037, -58.3816], 4); // vista por defecto
  L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
    attribution: "&copy; OpenStreetMap contributors",
  }).addTo(map);

  let marker;

  // Si hay dirección actual, intentar geocodificarla (buscar coordenadas)
  if (direccion) {
    try {
      const response = await fetch(`/helper/geocode.php?direccion=${encodeURIComponent(direccion)}`);
      if (response.ok) {
        const { lat, lon } = await response.json();
        marker = L.marker([lat, lon]).addTo(map);
        map.setView([lat, lon], 10);
      }
    } catch (e) {
      console.error("No se pudo geocodificar dirección:", e);
    }
  }

  // Al hacer clic, actualizar marcador y campo
  map.on("click", async (e) => {
    const { lat, lng } = e.latlng;

    if (marker) marker.remove();
    marker = L.marker([lat, lng]).addTo(map);

    try {
      const response = await fetch(`/helper/nominatim.php?lat=${lat}&lon=${lng}`);
      const data = await response.json();

      const address = data.address || {};
      const city = address.city || address.town || address.village || address.state || '';
      const country = address.country || '';
      const fullAddress = country && city ? `${country}, ${city}` : (country || city || 'Ubicación desconocida');

      addressInput.value = fullAddress;
    } catch (error) {
      console.error("Error al obtener ubicación:", error);
    }
  });
});

</script>