<main class="w-full p-8 flex flex-col gap-8 text-[#E2E4F3]">

  <h1 class="text-3xl font-bold border-b-2 border-[#2c2f56] pb-3">Panel del Editor</h1>

  <!-- Botones de navegaci贸n -->
  <div class="flex gap-4 mb-4">
  <button id="btnPreguntas" class="tab-btn px-4 py-2 rounded-lg font-semibold transition" onclick="mostrarSeccion('preguntas')">
    Preguntas
  </button>
  <button id="btnReportes" class="tab-btn px-4 py-2 rounded-lg font-semibold transition" onclick="mostrarSeccion('reportes')">
    Reportes
  </button>
  <button id="btnSugerencias" class="tab-btn px-4 py-2 rounded-lg font-semibold transition" onclick="mostrarSeccion('sugerencias')">
    Sugerencias
  </button>
</div>


  <!-- Secci贸n PREGUNTAS -->
  <div id="seccion-preguntas" class="bg-[#2c2f56] p-6 rounded-xl shadow-lg">
    <h2 class="text-xl font-bold text-[#BC6BE8] mb-4"> Contenido de Preguntas</h2>
    <p class="text-gray-300">Aqu铆 va el contenido de preguntas...</p>
  </div>
  
  <!-- Secci贸n REPORTES -->
  <section id="seccion-reportes" class="hidden">
    <h2 class="text-2xl font-semibold mb-3">Reportes de Preguntas</h2>

    {{#reportes}}
      <div class="p-4 bg-[#2c2f56] rounded-lg mb-4">
        <p><strong>ID Pregunta:</strong> {{pregunta_id}}</p>
        <p><strong>Motivo:</strong> {{motivo}}</p>
        <p><strong>Usuario:</strong> {{usuario}}</p>
        <button onclick="resolverReporte({{id}})" class="mt-2 bg-green-600 px-3 py-1 rounded">Marcar como resuelto</button>
      </div>
    {{/reportes}}

    {{^reportes}}
      <p class="text-gray-400">No hay reportes pendientes.</p>
    {{/reportes}}
  </section>

  <!-- Secci贸n SUGERENCIAS -->
  <section id="seccion-sugerencias" class="hidden">
    <h2 class="text-2xl font-semibold mb-3">Sugerencias</h2>

    {{#sugerencias}}
      <div class="p-4 bg-[#2c2f56] rounded-lg mb-4">
        <p><strong>Usuario:</strong> {{usuario}}</p>
        <p><strong>Mensaje:</strong> {{mensaje}}</p>
      </div>
    {{/sugerencias}}

    {{^sugerencias}}
      <p class="text-gray-400">No hay sugerencias por ahora.</p>
    {{/sugerencias}}
  </section>

</main>

<script>
function mostrarSeccion(seccion) {
  const secciones = {
    preguntas: document.getElementById("seccion-preguntas"),
    reportes: document.getElementById("seccion-reportes"),
    sugerencias: document.getElementById("seccion-sugerencias")
  };

  const botones = {
    preguntas: document.getElementById("btnPreguntas"),
    reportes: document.getElementById("btnReportes"),
    sugerencias: document.getElementById("btnSugerencias")
  };

  for (const key in secciones) {
    if (key === seccion) {
      secciones[key].classList.remove("hidden");
    } else {
      secciones[key].classList.add("hidden");
    }

    botones[key].classList.toggle("bg-[#BC6BE8]", key === seccion);
    botones[key].classList.toggle("text-white", key === seccion);
    botones[key].classList.toggle("opacity-100", key === seccion);
    botones[key].classList.toggle("bg-[#3f4477]", key !== seccion);
    botones[key].classList.toggle("text-gray-300", key !== seccion);
    botones[key].classList.toggle("opacity-70", key !== seccion);
  }
}
</script>
<script>
document.addEventListener('DOMContentLoaded', () => {
  mostrarSeccion('preguntas'); // secci贸n por defecto
});
</script>

</body>
</html>

