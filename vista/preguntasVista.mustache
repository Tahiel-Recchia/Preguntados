<main class="flex flex-col h-[60%] w-1/2 mx-auto">
    <div class="flex justify-between items-center max-w-[1024px] pb-[40px]">
        <h1 class="text-white text-xl font-bold">Preguntados</h1>
        <div class="text-white bg-gradient-to-r from-[#E65895] to-[#BC6BE8] rounded-3xl px-[16px] py-[8px] font-semibold">üèÜ 2/10 Puntos</div>
    </div>

    <div class="bg-[#343964] py-[62px] rounded-2xl w-full justify-center flex flex-col">

        {{#mensaje_resultado}}
            <p class="text-center text-lg font-medium pb-[42px] text-green-400">{{mensaje_resultado}}</p>
        {{/mensaje_resultado}}

        {{^mensaje_resultado}}
            <div class="text-white p-6 rounded-lg flex-center justify-center space-x-4">
                <p class="font-bold text-4x1 text-center">Tiempo restante: <span id="timer">10</span> segundos</p>
            </div>
            <p class="text-white text-center text-lg font-medium pb-[42px]">
                {{pregunta}}
            </p>
        {{/mensaje_resultado}}
    </div>

    {{^modo_resultado}}

        <form class="grid grid-cols-2 gap-[20px] w-2/3 self-center" action="/preguntas/base" method="POST">
            {{#opciones}}
                <button class="cursor-pointer w-full py-[20px] bg-white text-gray-800 font-semibold rounded-lg hover:bg-gray-200 transition"
                        type="submit"
                        name="respuesta_usuario"
                        value="{{descripcion}}">
                    {{descripcion}}
                </button>
            {{/opciones}}
        </form>
    {{/modo_resultado}}


    {{#modo_resultado}}
        <div class="grid grid-cols-2 gap-[20px] w-2/3 self-center">
            {{#opciones}}
                <div class="w-full py-[20px] text-center text-white font-semibold rounded-lg

                    {{#es_la_correcta}}
                        bg-green-600 border-2 border-green-300  {{/es_la_correcta}}
                    {{^es_la_correcta}}
                            bg-gray-700 opacity-60
                    {{/es_la_correcta}}">
                    {{descripcion}}
                </div>
            {{/opciones}}
        </div>

        <div class="w-2/3 self-center mt-5">
            <form action="/ruleta/base" method="GET">
                <button type="submit" class="w-full py-3 bg-blue-600 text-white font-bold rounded-lg hover:bg-blue-700 transition">
                    Siguiente Pregunta
                </button>
            </form>
        </div>
        {{#modo_resultado}}
        <div class="w-2/3 self-center mt-4 flex gap-4">
            <button id="btnSugerirPregunta" type="button" class="flex-1 py-3 bg-gradient-to-r from-[#E65895] to-[#BC6BE8] text-white font-bold rounded-lg hover:opacity-90">Sugerir Pregunta</button>
            <button id="btnReportarPregunta" type="button" class="flex-1 py-3 bg-red-600 text-white font-bold rounded-lg hover:opacity-90">Reportar Pregunta</button>
        </div>
        {{/modo_resultado}}
    {{/modo_resultado}}

</main>
<script src="/public/Javascript/timer.js"></script>

