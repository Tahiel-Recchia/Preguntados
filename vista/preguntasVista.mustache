<main class="bg-[#343964] flex items-center justify-center p-4 font-sans">

    <div class="w-full max-w-3xl flex flex-col gap-6">

        <header class="flex justify-between items-center px-2">
            <h1 class="text-2xl font-bold text-white tracking-wider drop-shadow-md">Preguntados</h1>

            <div class="inline-flex items-center bg-[#343964] text-white rounded-full px-4 py-2 border border-[#BC6BE8]/30 shadow-lg shadow-[#BC6BE8]/10">
                <span class="font-semibold mr-2 text-gray-300 text-sm uppercase tracking-wide">Puntos</span>
                <span class="font-bold text-xl text-[#BC6BE8]">{{puntos}}</span>
            </div>
        </header>

        <div class="bg-[#2d2e42] rounded-3xl shadow-2xl overflow-hidden border border-white/5 relative">

            <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-[#E65895] to-[#BC6BE8]"></div>

            <div class="p-8 md:p-10 flex flex-col items-center justify-center text-center min-h-[200px]">

                {{#mensaje_resultado}}
                    <div class="mb-6 px-6 py-3 bg-green-500/10 border border-green-500/30 rounded-xl">
                        <p class="text-xl font-bold text-green-400 animate-pulse">
                            {{mensaje_resultado}}
                        </p>
                    </div>
                {{/mensaje_resultado}}

                {{^mensaje_resultado}}
                    <div class="mb-8 flex items-center justify-center gap-2 text-gray-400 bg-[#1e1e2e]/50 px-4 py-1.5 rounded-lg border border-white/5">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <p class="font-mono font-bold text-lg">
                            <span id="timer" class="text-[#E65895]">10</span> s
                        </p>
                    </div>

                    <p class="text-white text-2xl md:text-3xl font-bold leading-snug drop-shadow-sm">
                        {{pregunta}}
                    </p>
                {{/mensaje_resultado}}
            </div>
        </div>

        {{^modo_resultado}}
            <form class="grid grid-cols-1 md:grid-cols-2 gap-4 w-full" action="/preguntas/base" method="POST">
                {{#opciones}}
                    <button type="submit"
                            name="respuesta_usuario"
                            value="{{descripcion}}"
                            class="w-full py-5 px-6 rounded-xl bg-[#1e1e2e] text-white font-semibold text-lg
                               border-2 border-transparent hover:border-[#BC6BE8] hover:bg-[#3e4375]
                               hover:-translate-y-1 hover:shadow-lg transition-all duration-200 shadow-md">
                        {{descripcion}}
                    </button>
                {{/opciones}}
            </form>
        {{/modo_resultado}}


        {{#modo_resultado}}
            <div class="flex flex-col gap-6 w-full">

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {{#opciones}}
                        <div class="w-full py-5 px-6 rounded-xl text-center font-bold text-lg border-2 transition-all duration-300
                        {{#es_la_correcta}}
                            bg-green-600/20 border-green-500 text-green-400
                        {{/es_la_correcta}}
                            {{^es_la_correcta}}
                            bg-[#252636] border-transparent text-gray-500 opacity-60
                        {{/es_la_correcta}}">
                            {{descripcion}}
                        </div>
                    {{/opciones}}
                </div>

                <div class="bg-[#2d2e42] p-6 rounded-2xl border border-white/5 flex flex-col gap-4 shadow-xl">

                    <form action="/ruleta/base" method="GET" class="w-full">
                        <button type="submit" class="w-full py-4 bg-blue-600 hover:bg-blue-500 text-white font-bold text-lg rounded-xl transition-colors shadow-lg shadow-blue-600/20 flex items-center justify-center gap-2">
                            Siguiente Pregunta
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" /></svg>
                        </button>
                    </form>

                    <div class="flex gap-4">
                        <button id="btnSugerirPregunta" type="button" class="flex-1 py-3 bg-[#343964] border border-[#E65895]/30 text-[#E65895] font-semibold rounded-lg hover:bg-[#E65895] hover:text-white transition-all text-sm">
                            Sugerir Pregunta
                        </button>
                        <button id="btnReportarPregunta" type="button" class="flex-1 py-3 bg-[#343964] border border-red-500/30 text-red-400 font-semibold rounded-lg hover:bg-red-500 hover:text-white transition-all text-sm">
                            Reportar Pregunta
                        </button>
                    </div>
                </div>

            </div>
        {{/modo_resultado}}

    </div>
</main>
<script src="/public/Javascript/timer.js"></script>

<!-- Modal Sugerir Pregunta -->
<div id="modalSugerir" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-[#1e1f3b] rounded-lg p-6 w-full max-w-2xl text-white shadow-lg">
        <h3 class="text-xl font-semibold mb-3">Sugerir nueva pregunta</h3>
        <form id="formSugerir" action="/paneleditor/guardarSugerencia" method="POST" class="flex flex-col gap-4">
            <div>
                <label class="block text-sm mb-1 text-gray-300">Descripción</label>
                <textarea name="descripcion" rows="3" class="w-full bg-[#1e1f3b] border border-[#3f4477] rounded-lg p-2 text-white" required></textarea>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm mb-1 text-gray-300">Categoría</label>
                    <select name="id_categoria" class="w-full bg-[#1e1f3b] border border-[#3f4477] rounded-lg p-2 text-white" required>
                        <option value="">Seleccionar...</option>
                        <option value="1">Geografía</option>
                        <option value="2">Historia</option>
                        <option value="3">Ciencia</option>
                        <option value="4">Deportes</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm mb-1 text-gray-300">Dificultad</label>
                    <select name="id_dificultad" class="w-full bg-[#1e1f3b] border border-[#3f4477] rounded-lg p-2 text-white" required>
                        <option value="1">Fácil</option>
                        <option value="2">Media</option>
                        <option value="3">Difícil</option>
                    </select>
                </div>
            </div>
            <div class="mt-2">
                <h4 class="text-lg font-semibold text-[#BC6BE8] mb-2">Respuestas</h4>
                <div class="flex flex-col gap-2">
                    <input name="respuesta_correcta" placeholder="Respuesta correcta" class="w-full bg-[#1e1f3b] border border-[#3f4477] rounded-lg p-2 text-white" required />
                    <input name="respuesta_incorrecta1" placeholder="Respuesta incorrecta 1" class="w-full bg-[#1e1f3b] border border-[#3f4477] rounded-lg p-2 text-white" required />
                    <input name="respuesta_incorrecta2" placeholder="Respuesta incorrecta 2" class="w-full bg-[#1e1f3b] border border-[#3f4477] rounded-lg p-2 text-white" required />
                    <input name="respuesta_incorrecta3" placeholder="Respuesta incorrecta 3" class="w-full bg-[#1e1f3b] border border-[#3f4477] rounded-lg p-2 text-white" required />
                </div>
            </div>
            <div class="flex justify-end gap-3 mt-4">
                <button type="button" id="cerrarSugerir" class="px-4 py-2 bg-gray-600 rounded-lg hover:bg-gray-700">Cancelar</button>
                <button type="submit" class="px-4 py-2 bg-[#BC6BE8] rounded-lg hover:opacity-80">Enviar Sugerencia</button>
            </div>
        </form>
    </div>
</div>

<!-- Modal Reportar Pregunta -->
<div id="modalReportar" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-[#1e1f3b] rounded-lg p-6 w-full max-w-lg text-white shadow-lg">
        <h3 class="text-xl font-semibold mb-3">Reportar pregunta</h3>
        <div id="reportPreguntaTexto" class="mb-3 text-gray-200"></div>
        <form id="formReportar" action="/paneleditor/reportarPregunta" method="POST" class="flex flex-col gap-3">
            <input type="hidden" name="pregunta_id" id="report_pregunta_id" value="">
            <label class="block text-sm mb-1 text-gray-300">Descripción breve (motivo)</label>
            <textarea name="descripcion" rows="3" class="w-full bg-[#1e1f3b] border border-[#3f4477] rounded-lg p-2 text-white" required></textarea>
            <div class="flex justify-end gap-3 mt-2">
                <button type="button" id="cerrarReportar" class="px-4 py-2 bg-gray-600 rounded-lg hover:bg-gray-700">Cancelar</button>
                <button type="submit" class="px-4 py-2 bg-red-600 rounded-lg hover:opacity-80">Enviar Reporte</button>
            </div>
        </form>
    </div>
</div>

<script>
    // Modal handlers for Sugerir / Reportar
    (function(){
        const btnSugerir = document.getElementById('btnSugerirPregunta');
        const modalSugerir = document.getElementById('modalSugerir');
        const cerrarSugerir = document.getElementById('cerrarSugerir');

        if (btnSugerir && modalSugerir) {
            btnSugerir.addEventListener('click', function(){ modalSugerir.classList.remove('hidden'); modalSugerir.classList.add('flex'); });
        }
        if (cerrarSugerir && modalSugerir) {
            cerrarSugerir.addEventListener('click', function(){ modalSugerir.classList.remove('flex'); modalSugerir.classList.add('hidden'); });
        }

        const btnReportar = document.getElementById('btnReportarPregunta');
        const modalReportar = document.getElementById('modalReportar');
        const cerrarReportar = document.getElementById('cerrarReportar');
        const reportTexto = document.getElementById('reportPreguntaTexto');
        const reportIdField = document.getElementById('report_pregunta_id');

        if (btnReportar && modalReportar) {
            btnReportar.addEventListener('click', function(){
                // Try to show the pregunta text if present in the page
                const preguntaEl = document.querySelector('.bg-[#343964] p') || document.querySelector('p');
                const texto = preguntaEl ? preguntaEl.textContent.trim() : '';
                if (reportTexto) reportTexto.textContent = texto ? ('Pregunta: ' + texto) : '';
                // If server provides pregunta id in a global JS var, set it; otherwise leave blank
                if (reportIdField) reportIdField.value = window.__currentPreguntaId || '';
                modalReportar.classList.remove('hidden'); modalReportar.classList.add('flex');
            });
        }
        if (cerrarReportar && modalReportar) {
            cerrarReportar.addEventListener('click', function(){ modalReportar.classList.remove('flex'); modalReportar.classList.add('hidden'); });
        }
    })();
</script>