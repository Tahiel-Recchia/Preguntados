<main class="w-full p-8 flex flex-col gap-8 text-[#E2E4F3]">
    <div class="grid grid-cols-1 md:grid-cols-1 gap-8">
        <section class="md:col-span-2">
            <h2 class="text-2xl font-bold mb-6 border-b-2 border-[#2c2f56] pb-2">Historial</h2>
            <div class="p-4 flex items-center justify-between transition block">
                <p class="font-semibold w-1/4 text-lg text-left text-white">Estado</p>
                <p class="font-semibold w-1/4 text-lg text-left text-white">Hora inicio</p>
                <p class="font-semibold w-1/4 text-lg text-left text-white">Hora fin</p>
                <p class="font-semibold w-1/4 text-lg text-right text-white">Puntaje</p>
            </div>
            <div class="space-y-4">
                {{#historial}}
                    <div class="bg-[#2c2f56] rounded-lg p-4 flex items-center justify-between transition hover:bg-[#3f4477] block">
                        <div class="flex w-1/4 items-center gap-4">
                            <div>
                                <p class="font-semibold text-lg text-white">{{estado}}</p>
                            </div>
                        </div>
                        <div class="flex w-1/4 items-center gap-4">
                            <div>
                                <p class="font-semibold text-lg text-left text-white">Iniciada: {{horaInicio}}</p>
                            </div>
                        </div>
                        <div class="flex w-1/4 items-center gap-4">
                            <div>
                                <p class="font-semibold text-lg text-left text-white">Finalizada: {{horaFin}}</p>
                            </div>
                        </div>
                        <div class="text-right w-1/4">
                            <p class="font-bold text-lg text-green-400">{{puntaje}} Pts</p>
                        </div>
                    </div>
                {{/historial}}
            </div>
        </section>
    </div>
</main>