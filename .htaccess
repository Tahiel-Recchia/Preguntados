# Activar motor de reescritura
RewriteEngine On

# Ajusta si tu app está en una subcarpeta, por ejemplo /miapp/
# RewriteBase /miapp/
RewriteBase /

# 1) NO reescribir las que empiecen con /imagenes/
RewriteCond %{REQUEST_URI} ^/imagenes/ [NC]
RewriteRule ^ - [L]

# 2) Si el archivo o directorio existe, no reescribir (CSS, JS, imágenes, etc.)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3) Reglas para controller / method / id (3 segmentos)
RewriteRule ^([^/]+)/([^/]+)/([^/]+)/?$ index.php?controller=$1&method=$2&id=$3 [L,QSA]

# 4) Regla para controller / method (2 segmentos)
RewriteRule ^([^/]+)/([^/]+)/?$ index.php?controller=$1&method=$2 [L,QSA]

# 5) Regla para solo controller (1 segmento)
RewriteRule ^([^/]+)/?$ index.php?controller=$1 [L,QSA]

# 6) Si la URI está vacía (root), se deja index.php por defecto (opcional)
